<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.login.LoginFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_close"
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:layout_gravity="right|center"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="false"
                android:padding="10dp"
                android:scaleType="center"
                android:tint="@android:color/background_dark"
                app:srcCompat="@drawable/ic_button_close" />

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="@dimen/herd_symbol_flash_page_size"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/page_margin_left_lager"
                android:layout_marginTop="40dp"
                android:layout_marginRight="@dimen/page_margin_right_lager"
                android:layout_marginBottom="40dp"

                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:tint="@color/colorTintSymbol"
                app:srcCompat="@drawable/tho_logo_small" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/button_facebaook_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/page_margin_button"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/page_margin_button"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_button_facebook"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/text_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/txt_or"
                android:textAlignment="gravity"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/linear_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".ui.login.LoginFragment">


                <TextView
                    style="@style/AppTheme.TextOnEditViewLogin"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:text="@string/txt_firstname" />

                <EditText
                    android:id="@+id/edit_first_name"
                    style="@style/AppTheme.EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:hint="@string/txt_enter_first_name" />

                <TextView
                    style="@style/AppTheme.TextOnEditViewLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:text="@string/txt_lastname" />

                <EditText
                    android:id="@+id/edit_last_name"
                    style="@style/AppTheme.EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:hint="@string/txt_enter_last_name" />

                <TextView
                    android:id="@+id/tv_email"
                    style="@style/AppTheme.TextOnEditViewLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:text="@string/txt_email_address" />

                <EditText
                    android:id="@+id/edit_reg_email"
                    style="@style/AppTheme.EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:hint="@string/txt_email" />


                <TextView
                    android:id="@+id/tv_password"
                    style="@style/AppTheme.TextOnEditViewLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:text="@string/txt_password" />

                <EditText
                    android:id="@+id/edit_reg_password"
                    style="@style/AppTheme.EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:hint="@string/txt_password"
                    android:inputType="textPassword" />


                <TextView
                    android:id="@+id/tv_confirm_password"
                    style="@style/AppTheme.TextOnEditViewLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:text="@string/txt_password_confirm" />

                <EditText
                    android:id="@+id/edit_reg_password_confirm"
                    style="@style/AppTheme.EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:hint="@string/txt_password_confirm"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    style="@style/AppTheme.TextOnEditViewLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:text="@string/txt_phone_number_optional" />

                <EditText
                    android:id="@+id/edit_phone_number"
                    style="@style/AppTheme.EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:hint="@string/txt_enter_your_phone_number"
                    android:inputType="number" />


                <com.theherdonline.ui.general.HerdButton
                    android:id="@+id/button_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_button"
                    android:layout_marginTop="15dp"

                    android:layout_marginRight="@dimen/page_margin_button"
                    app:HerdButton_icon="@drawable/ic_button_inline_register"
                    app:HerdButton_text="@string/txt_register" />




                <LinearLayout
                    android:id="@+id/linearLayout_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_dont_have_an_account"
                        android:textColor="@color/colorDarkBlue" />

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/txt_login"
                        android:textColor="@color/colorButton"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


                <TextView
                    style="@style/AppTheme.TextOnEditViewLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:text="@string/txt_email_address" />

                <EditText
                    android:id="@+id/edit_email"
                    style="@style/AppTheme.EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:hint="@string/txt_enter_your_email_address" />


                <TextView
                    style="@style/AppTheme.TextOnEditViewLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:text="@string/txt_password" />


                <EditText
                    android:id="@+id/edit_password"
                    style="@style/AppTheme.EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:hint="@string/txt_enter_your_password"
                    android:inputType="textPassword" />

                <CheckBox
                    android:id="@+id/checkbot_remember_me"
                    style="@style/AppTheme.TextOnEditViewLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"
                    android:layout_marginTop="8dp"

                    android:checked="false"

                    android:text="@string/txt_remember_me"
                    android:textStyle="normal" />


                <com.theherdonline.ui.general.HerdButton
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/page_margin_button"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="@dimen/page_margin_button"
                    app:HerdButton_icon="@drawable/ic_button_inline_login"
                    app:HerdButton_text="@string/txt_login" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/page_margin_left_lager"

                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/page_margin_right_lager"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_dont_have_an_account"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:id="@+id/tv_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/txt_register"
                        android:textColor="@color/colorButton"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/txt_forgot_your_password"
                    android:textColor="@color/colorButton"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/button_change_user"
                    style="@style/AppTheme.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Change user for testing" />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>