<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/vertical_item_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_liveNow"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/red">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_paddockLive"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:padding="5dp"
                app:srcCompat="@drawable/icon_live" />

            <TextView
                android:id="@+id/tv_paddockLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/top_search_button"
                android:text="@string/txt_live_now"
                android:textColor="@color/colorTextWhite"
                android:textSize="18dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/page_margin_right"
            android:layout_marginTop="@dimen/vertical_item_margin"
            android:layout_marginRight="@dimen/page_margin_right"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <FrameLayout
                    android:id="@+id/view_paddock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_paddock" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/top_search_button"
                        android:gravity="bottom"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_paddock_sales"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/page_margin_right"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <FrameLayout
                    android:id="@+id/view_saleyard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_saleyard" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/top_search_button"
                        android:gravity="bottom"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_saleyard_auctions"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/page_margin_right"
            android:layout_marginTop="@dimen/vertical_item_margin"
            android:layout_marginRight="@dimen/page_margin_right"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <FrameLayout
                    android:id="@+id/view_saleyard_plus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_auctionsplus" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/top_search_button"
                        android:gravity="bottom"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_wanted_livestock"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/page_margin_right"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <FrameLayout
                    android:id="@+id/view_stream"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_marketreports" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/top_search_button"
                        android:gravity="bottom"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_market_report"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/page_margin_right"
            android:layout_marginTop="@dimen/vertical_item_margin"
            android:layout_marginRight="@dimen/page_margin_right"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <FrameLayout
                    android:id="@+id/view_herdLive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_herdlive" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/top_search_button"
                        android:gravity="bottom"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_herd_live"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/page_margin_right"
            android:layout_marginTop="@dimen/vertical_item_margin"
            android:layout_marginRight="@dimen/page_margin_right"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false">

                <FrameLayout
                    android:id="@+id/view_prime_saleyard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/image_primesaleyard" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/top_search_button"
                        android:gravity="bottom"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/txt_prime_saleyards"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</layout>